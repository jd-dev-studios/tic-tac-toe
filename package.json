{
  "name": "tic-tac-toe",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "setup:android": "npm run build:capacitor && npx cap add android && npx cap sync",
    "build:docker": "cross-env BUILD_MODE=docker next build",
    "build:capacitor": "cross-env BUILD_MODE=capacitor next build",
    "docker:build-image": "npm run build:docker && docker build -t tic-tac-toe .",
    "mobile:build": "npm run build:capacitor && npx cap sync",
    "android:open": "cap open android",
    "android:run": "cap run android",
    "android:dev": "cap run android -l",
    "lint": "eslint"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.3",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
